<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="nfc">
    <select id="confirm_id">
        SELECT *
          FROM NFC_TAG
         WHERE ID = #{ID}
    </select>

    <insert id="register">
        INSERT INTO NFC_TAG
        VALUES (#{ID}, 1, #{PHONE}, #{ADDRESS}, 0)
    </insert>

    <update id="update">
        UPDATE NFC_TAG
           SET STATE = 1,
               PHONE = #{PHONE},
               ADDRESS = #{ADDRESS}
         WHERE ID = #{ID}
    </update>

    <update id="request">
        UPDATE NFC_TAG
           SET REQUEST = 1
         WHERE ID = #{ID}
    </update>
</mapper>